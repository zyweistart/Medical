<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:paddingLeft="0dip"
    android:paddingRight="0dip"
    android:paddingTop="@dimen/spacing_1"
    android:paddingBottom="@dimen/spacing_1"
    android:background="#08b2c9">
    
    <Button 
        android:id="@+id/module_top_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:onClick="onClick"
        android:background="@drawable/module_top_left_1_selector"/>
    
    <TextView
        android:id="@+id/module_top_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="@dimen/fontsize_h5"
        android:layout_centerInParent="true" 
        android:text="@string/app_name"/>
    
    <Button 
        android:id="@+id/module_top_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:onClick="onClick"
        android:background="@drawable/module_top_right_1_selector"
        android:visibility="gone"/>
    
</RelativeLayout>