<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#08b2c9">
    
    <Button 
        android:id="@+id/module_header_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:onClick="onClick"
        android:background="@drawable/selector_module_header_button_1"/>
    
    <TextView
        android:id="@+id/module_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="23.0dip"
        android:layout_centerInParent="true" 
        android:text="@string/app_name"/>
    
    <Button 
        android:id="@+id/module_header_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:onClick="onClick"
        android:background="@drawable/selector_module_header_button_2"
        android:visibility="gone"/>
    
</RelativeLayout>