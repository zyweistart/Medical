<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:paddingLeft="0dip"
    android:paddingRight="0dip"
    android:paddingTop="18.0dip"
    android:paddingBottom="18.0dip"
    android:background="#08b2c9">
    
    <Button 
        android:id="@+id/module_header_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:onClick="onClick"
        android:background="@drawable/selector_module_top_left_1"/>
    
    <TextView
        android:id="@+id/module_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="23.0dip"
        android:layout_centerInParent="true" 
        android:text="@string/app_name"/>
    
    <Button 
        android:id="@+id/module_header_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:onClick="onClick"
        android:background="@drawable/selector_module_top_right_1"
        android:visibility="gone"/>
    
</RelativeLayout>